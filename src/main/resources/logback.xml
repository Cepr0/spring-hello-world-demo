<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%10thread] %cyan(%-45logger{30}) - %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <logger name="org.springframework" level="DEBUG" />
    <logger name="io.github.cepr0" level="DEBUG" />

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
